\section{$Fourier$级数}
\subsection{三角函数的正交性}
三角函数系$\left\{1, \cos \frac{\pi}{l} x, \sin \frac{\pi}{l} x, \cos \frac{2 \pi}{l} x, \sin \frac{2 \pi}{l} x, \cdots, \cos \frac{n \pi}{l} x, \sin \frac{n \pi}{l} x, \cdots\right\}$任意两个不同的函数在区间$[-l,l]$上的积分等于$0$

即
$$
\int_{-l}^{l} \cos \frac{n \pi}{l} x \mathrm{~d} x=\int_{-l}^{l} \sin \frac{n \pi}{l} x \mathrm{~d} x=0, n=1,2 \cdots
$$

$$
\int_{-l}^{l} \sin \frac{m \pi}{l} x \cos \frac{n \pi}{l} x \mathrm{~d} x=0, m, n=1,2, \cdots
$$

$$
\int_{-l}^{l} \cos \frac{m \pi}{l} x \cos \frac{n \pi}{l} x \mathrm{~d} x=\int_{-l}^{l} \sin \frac{m \pi}{l} x \sin \frac{n \pi}{l} x \mathrm{~d} x=0, m, n=1,2, \cdots, m \neq n
$$

\subsection{$Fourier$系数与$Fourier$级数}
设$f(x)$ 以 $2 l$ 为周期或只定义在 $[-l, l]$ 上, 在 $[-l, l]$，且在$[-l, l]$上可积（通常$l=\pi$）

在三角级数
$$
\frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left(a_{n} \cos \frac{n \pi}{l} x+b_{n} \sin \frac{n \pi}{l} x\right)
$$
中，令
$$
a_{n}=\frac{1}{l} \int_{-l}^{l} f(x) \cos \frac{n \pi}{l} x \mathrm{~d} x, n=0,1,2, \cdots
$$
$$
b_{n}=\frac{1}{l} \int_{-l}^{l} f(x) \sin \frac{n \pi}{l} x \mathrm{~d} x, n=1,2,3, \cdots
$$
则称之为函数$f(x)$的$Fourier$级数（以$2l$为周期），记为
$$
f(x) \sim \frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left(a_{n} \cos \frac{n \pi}{l} x+b_{n} \sin \frac{n \pi}{l} x\right)
$$
对应的系数$a_{n}, b_{n}$ 称为 $f(x)$的$Fourier$系数

特别地，若$l=\pi$，则有
$$
f(x) \sim \frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left(a_{n} \cos n x+b_{n} \sin n x\right)
$$
\par
对应的系数为
$$
a_{n}=\frac{1}{\pi} \int_{-\pi}^{\pi} f(x) \cos n x \mathrm{~d} x, n=0,1,2, \cdots
$$
$$
b_{n}=\frac{1}{\pi} \int_{-\pi}^{\pi} f(x) \sin n x \mathrm{~d} x, n=1,2,3, \cdots
$$
\newpage
\subsection{$Fourier$级数的收敛性——Dirichlet收敛定理（充分条件）}
\begin{theorem}
设$f(x)$是$[-\pi,\pi]$上的分段单调函数，除有限个第一类间断点外都是连续的，则$f(x)$的$Fourier$级数在$[-\pi,\pi]$上处处收敛，且收敛于
$$
f(x)\sim\frac{a_{0}}{2}+\sum_{n=1}^{\infty}\left(a_{n} \cos \frac{n \pi}{l} x+b_{n} \sin \frac{n \pi}{l} x\right)
$$
$$
=\left\{\begin{array}{cl}
f(x), & \text { 若 } x \in(-l, l) \text { 为 } f(x) \text { 的连续点, } \\
\frac{1}{2}[f(x+0)+f(x-0)], & \text { 若 } x \in(-l, l) \text { 为 } f(x) \text { 的第一类间断点, } \\
\frac{1}{2}[f(-l+0)+f(l-0)], & \text { 若 } x=\pm l .
\end{array}\right.
$$
\end{theorem}

\begin{note}
上述定理也可以等价记忆为：
\par
1.$f(x)$在$[-l,l]$上连续，或只有有限个间断点，且均为第一类间断点

2.$f(x)$在$[-l,l]$上只有有限个极值点
\end{note}
\subsection{偶延拓与奇延拓}
\begin{note}
偶延拓与偶延拓与奇延拓，就是利用构造新函数，将原本的非周期函数强行转化为$[-\pi,\pi]$上的偶函数或奇函数，且进一步拓展成整个实数域上的周期函数
\end{note}
\begin{theorem}{偶延拓}
设$f(x)$ 是 $[0, \pi]$ 上的非周期函数, 令
$$
F(x)= \begin{cases}f(x), & 0 \leqslant x \leqslant \pi \\ f(-x), & -\pi \leqslant x<0\end{cases}
$$
则$F(x)$ 除 $x=0$ 外在 $[-\pi, \pi]$ 上为偶函数, 有
$$
f(x) \sim \frac{a_{0}}{2}+\sum_{n=1}^{\infty} a_{n} \cos n x
\text{（余弦级数）}$$
其中
$$
a_{n}=\frac{2}{\pi} \int_{0}^{\pi} f(x) \cos n x \mathrm{~d} x(n=0,1,2, \cdots)
$$
\end{theorem}

\begin{theorem}{奇延拓}
设$f(x)$ 是 $[0, \pi]$ 上的非周期函数, 令
$$
F(x)=\left\{\begin{array}{c}
f(x), 0 \leqslant x \leqslant \pi \\
-f(-x),-\pi \leqslant x<0
\end{array}\right.
$$
则$F(x)$ 除 $x=0$ 外在 $[-\pi, \pi]$ 上为奇函数, 有
$$
f(x) \sim \sum_{n=1}^{\infty} b_{n} \sin n x
\text{（余弦级数）}$$
其中
$$
b_{n}=\frac{2}{\pi} \int_{0}^{\pi} f(x) \sin n x \mathrm{~d} x(n=1,2, \cdots)
$$
\end{theorem}
\subsection{典型例题}
\begin{example}
设$f(x)$ 是周期为$2$的周期函数, 它在区间 $(-1,1]$ 上定义为
$$
f(x)= \begin{cases}2, & -1<x \leqslant 0 \\ x^{3}, & 0<x \leqslant 1\end{cases}
$$
则$f(x) \text { 的$Fourier$级数在 } x=1 \text { 处收敛于 }\underline{\quad\quad\quad\quad}$
\end{example}
\begin{example}
设函数$f(x)=x^{2},x\in[0,\pi]$，将$f(x)$展开为$2\pi$为周期的$Fourier$级数，并证明
$$
\sum_{n=1}^{\infty} \frac{1}{n^{2}}=\frac{\pi^{2}}{6}
$$
\end{example}












