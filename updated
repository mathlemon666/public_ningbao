\chapter{绝活级数（数一）}
\begin{introduction}
  \item 第一节 \quad 常数项级数及其选择题秒杀
  \item 第二节 \quad 幂级数的收敛判别法和展开
  \item 第三节 \quad 幂级数的求和（送分绝活）
  \item 第四节 \quad $Fourier$级数
  
\end{introduction}
本章学习的注意事项：
\begin{itemize}
    \item 注意条件的充分性和必要性
    \item 联系反常积分相互对比,注意两者的异同，21大纲新增“级数的积分判别法”
    \item 时刻注意“形式上的统一”，即“整体性”和“一致性”
\end{itemize}
\section{常数项级数及其选择题秒杀}
\subsection{常数项级数的概念}
同反常积分一样，级数作为极限的一种，也是“用有限定义无限”，当然在第一章讲的“存在$\pm$不存在$=$不存在”对于级数来说同样适用（级数收敛理解为极限存在）
\begin{definition}[数项级数]\label{数项级数}
定义无穷多个数$u_{1}, u_{2}, \cdots, u_{n}, \cdots$依次相加所得到的表达式$$
\sum_{n=1}^{\infty} u_{n}=u_{1}+u_{2}+\cdots+u_{n}+\cdots
$$称为无穷级数（简称级数）$u_n$称为级数的一般项或通项

级数部分和为$$
S_{n}=\sum_{k=1}^{n} u_{k}=u_{1}+u_{2}+\cdots+u_{n},(n=1,2, \cdots)
$$
注意到此时$n$是一个具体的数字，若数列${S_n}$的极限存在，即$\displaystyle\lim _{n \rightarrow \infty} S_{n}$存在，则称级数$\sum_{n=1}^{\infty} u_{n}$收敛；否则称级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$发散。当级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛时，称极限值$\displaystyle\lim _{n \rightarrow \infty} S_{n}$为此级数的和，即$$
\sum_{n=1}^{\infty} u_{n}=\lim _{n \rightarrow \infty} S_{n}=\lim _{n \rightarrow \infty} \sum_{k=1}^{n} u_{k}=S
$$当级数收敛时，$r_{n}=S-S_{n}=u_{n+1}+u_{n+2}+\cdots$称为级数的余项（或余和）
\end{definition}
显然收敛时$r_{n} \rightarrow 0$
\begin{proposition}
有限项不会影响级数的敛散性，但是可能会影响收敛级数的收敛值
\end{proposition}
\subsection{数项级数的基本性质}
\begin{theorem}{收敛级数的必要条件}{label}
设级数$\sum_{n=1}^{\infty} u_{n}$收敛，则$\displaystyle\lim _{n \rightarrow \infty} u_{n}=0$
\end{theorem}
\newpage
\begin{note}
\begin{itemize}
    \item 此条件是必要非充分条件
    \item （任何定理均可考虑其逆否命题来加深理解和应用）其否命题为：若$\displaystyle\lim _{n \rightarrow \infty} u_{n} \neq 0$原级数发散
\end{itemize}
\end{note}
\begin{theorem}{收敛级数的线性运算}
若两个级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$与$\displaystyle\sum_{n=1}^{\infty} v_{n}$同时收敛，则
$$
\sum_{n=1}^{\infty}\left(\lambda u_{n}+\mu v_{n}\right)=\lambda \sum_{n=1}^{\infty} u_{n}+\mu \sum_{n=1}^{\infty} v_{n}
$$
其中$\lambda, \mu$为常数
\end{theorem}
\begin{theorem}{收敛级数的结合律}
若级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛，在不改变其项的次序的前提下，任意加括号，并把每个括号内的各项的和作为一项，这样所得到的新级数仍收敛，且和不变

特别的，若$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛，则
$$
\sum_{n=1}^{\infty}\left(u_{2 n-1}+u_{2 n}\right)=\sum_{n=1}^{\infty}\left(u_{3 n-2}+u_{3 n-1}+u_{3 n}\right)=\sum_{n=1}^{\infty} u_{n}
$$
\end{theorem}
\begin{note}
\begin{itemize}
    \item 只是原级数收敛$\rightarrow$加括号收敛，反之不成立
    \item 考虑其逆否题，若加括号发散$\rightarrow$原级数发散
\end{itemize}
\end{note}
\begin{proposition}
若$\displaystyle\sum_{n=1}^{\infty} u_{n}$满足$\displaystyle\lim _{n \rightarrow+\infty} u_{n}=0$又其相继两项加括号所得的级数$\displaystyle\sum_{n=1}^{\infty}\left(u_{2 n-1}+u_{2 n}\right)$收敛，则原级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$必定收敛，且$\displaystyle\sum_{n=1}^{\infty}\left(u_{2 n-1}+u_{2 n}\right)=\sum_{n=1}^{\infty} u_{n}$
\end{proposition}
\subsection{两个重要的级数（$p$级数与$q$级数）}
注意$p$级数与$q$级数和反常积分的两个标准函数的联系

\begin{theorem}{几何级数（$q$级数）}
$$
\sum_{n=0}^{\infty} q^{n}\left\{\begin{array}{l}
|q|<1 \quad \text {收敛} \\
|q| \geqslant 1 \quad \text {发散}
\end{array}\right.
$$
\end{theorem}

\begin{theorem}{$p$级数}
$$
\sum_{n=1}^{\infty} \frac{1}{n^{p}}\left\{\begin{array}{l}
p>1 \quad \text {收敛} \\
p \leqslant 1 \quad \text {发散}
\end{array}\right.
$$
\end{theorem}


\begin{theorem}{补充一个常考的}
$$
\sum_{n=2}^{\infty} \frac{1}{n^{p} \ln ^{q} n}\left\{\begin{array}{l}
p>1, \forall q \\
p=1 \text { 且 } q>1
\end{array}\right. \text {收敛, 其余均发散}
$$
\end{theorem}
\begin{note}
以下结论仅针对\textcolor[rgb]{1,0,0}{正项级数}适用，也就是说若题干只谈“级数”没有明确说明“正项级数”或者讨论其“绝对收敛”的情况，一律 \textcolor[rgb]{1,0,0}{不适用}，常出现在选择题中。
\end{note}
\subsection{正项级数的的概念和收敛的充要条件}
\begin{theorem}
若$u_{n} \geqslant 0$则，则称$\displaystyle\sum_{n=1}^{\infty} u_{n}$为正项级数，正项级数的特点是部分和数列$\left\{S_{n}\right\}$单调非减，利用极限的“单调有界准则可知，正项级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛的\textcolor[rgb]{1,0,0}{充要条件}为$\rightarrow$部分和数列有（上）界
\end{theorem}
\subsection{正项级数的判别法之比较判别法}

\begin{theorem}
设$u_{n} \leq k v_{n}, u_{n} \geq 0, v_{n} \geq 0$，则
$$
\sum_{n=1}^{\infty} v_{n} \text { 收敛 } \rightarrow \sum_{n=1}^{\infty} u_{n} \text { 收敛 }
$$
$$
\sum_{n=1}^{\infty} u_{n} \text { 发散 } \rightarrow \sum_{n=1}^{\infty} v_{n} \text { 发散 }
$$
\end{theorem}
\begin{note}
同反常积分的比较判别法一样：大的收敛$\rightarrow$小的收敛；小的发散$\rightarrow$大的发散
\end{note}

\subsection{正项级数的判别法之比较判别法的极限形式}
\begin{theorem}
设$\displaystyle\lim _{n \rightarrow \infty} \frac{u_{n}}{v_{n}}=l(0 \leqslant l \leqslant+\infty)$

1.若$0<l<+\infty$, , 则 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 与 $\displaystyle\sum_{n=1}^{\infty} v_{n}$ 同敛散

2.若 $l=0$, 则 $\displaystyle\sum_{n=1}^{\infty} v_{n}$ 收敛 $\rightarrow \sum_{n=1}^{\infty} u_{n}$ 收敛, $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 发散 $\rightarrow \displaystyle\sum_{n=1}^{\infty} v_{n}$ 发散

3.若$l=+\infty$, 则 $\displaystyle\sum_{n=1}^{\infty} v_{n}$ 发散 $\rightarrow \displaystyle\sum_{n=1}^{\infty} u_{n}$ 发散, $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛 $\displaystyle\rightarrow \sum_{n=1}^{\infty} v_{n}$ 收敛
\end{theorem}
\begin{note}
\par
1.站在“无穷小的阶”的高度来理解比较判别法的极限形式

2.与反常积分中“找分母的等价无穷大”形式相同

3.$p$级数与$q$级数常常用作比较的基准级数
\end{note}
\subsection{正项级数的判别法之比值判别法}
\begin{theorem}
若$\displaystyle\lim _{n \rightarrow \infty}\left|\frac{u_{n+1}}{u_{n}}\right|=\rho$，则
$$
\sum_{n=1}^{\infty} u_{n}\left\{\begin{array}{l}
\text { 收敛, } \rho<1 \\
\text { 发散, } \rho>1 \\
\text { 不一定, } \rho=1
\end{array}\right.
$$
\end{theorem}
\begin{note}
\par
1.通项越小，收敛的“概率”就越高

2.这$\rho<1$理解为当$n>N$整个通项的公比$q<1$

3.收敛和发散以“$1$”为界限
\end{note}
\subsection{正项级数的判别法之根值判别法}
\begin{theorem}
若$\displaystyle\lim _{n \rightarrow \infty} \sqrt[n]{u_{n}}=\rho$，则
$$
\sum_{n=1}^{\infty} u_{n} \begin{cases}\text { 收敛, } & \rho<1 \\ \text { 发散, } & \rho>1 \\ \text { 不一定, } & \rho=1\end{cases}
$$
\end{theorem}
\subsection{正项级数的判别法之确定$u_{n}$的阶数（可用泰勒展开）}
\begin{note}
泰勒展开的目的是找等价无穷小（用于确定$u_{n}$的阶）
\end{note}
\begin{theorem}
设$u_{n}>0$，$ \displaystyle\lim _{n \rightarrow \infty} \frac{u_{n}}{\frac{1}{n^{p}}}=A$

1.若$0 \leqslant A<+\infty, p>1$ （即当 $n \rightarrow \infty$ 时 $u_{n}$是$\frac{1}{n}$ 的 $p$ 阶或高于 $p$ 阶的无穷小, $p>1$）则$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛

2.若$0<A \leqslant+\infty, p \leqslant 1$ （即当 $n \rightarrow \infty$ 时 $u_{n}$是$\frac{1}{n}$ 的 $p$ 阶或低于 $p$ 阶的无穷小, $p\leqslant1$）则$\displaystyle\sum_{n=1}^{\infty} u_{n}$发散
\end{theorem}
\begin{note}
若 $u_{n} \geq 0$ 且当 $n \rightarrow \infty$ 时, $u_{n}=o\left(\frac{1}{n}\right)$, \textcolor[rgb]{1,0,0}{不能断定} $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛
\end{note}
\subsection{交错级数的定义和判别法}
\begin{definition}[交错级数]
若$u_{n}>0$，则称$\displaystyle\sum_{n=1}^{\infty}(-1)^{n-1} u_{n}=u_{1}-u_{2}+u_{3}-u_{4}+\cdots$
\end{definition}
\begin{note}
\par
1.对于交错级数，第一项是$+$还是$-$不是重点，重点一定是$+-$交替的

2.$u_{n}>0$
\end{note}
\begin{theorem}{莱布尼茨交级数判别法}
设上述交错级数满足

1.$u_{n} \geqslant u_{n+1}, n \geqslant N \geqslant 1$

2.$\displaystyle\lim _{n \rightarrow \infty} u_{n}=0$

则$\displaystyle\sum_{n=1}^{\infty}(-1)^{n-1} u_{n}$收敛

\end{theorem}
\subsection{级数学习的核心思想}
\begin{proposition}
上述所讲的判别法，只是充分条件，而非必要条件，即
$$
\text { 满足条件 } \rightarrow \text { 收敛 }
$$
$$
\text { 级数收敛 } \text{\textcolor[rgb]{1,0,0}{不能推出}} \text { 满足条件 }
$$
\end{proposition}
\subsection{绝对收敛与条件收敛}
上面给出了若干正项级数的判别法和交错级数的判别法，对于一般的通项符号不规律不安华的级数，可以优先考虑其绝对敛散性
\begin{definition}{绝对收敛和条件收敛}
若级数 $\displaystyle\sum_{n=1}^{\infty}\left|u_{n}\right|$ 收敛, 则称级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 绝对收敛

若级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛, 而 $\displaystyle\sum_{n=1}^{\infty}\left|u_{n}\right|$ 发散, 则称级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 条件收敛
\end{definition}
\begin{note}
正项级数因为加了绝对值之后是其本身，所以正项级数收敛$\leftrightarrow$正项级数绝对收敛
\end{note}
\begin{theorem}{绝对收敛和条件收敛的性质}
1.绝对收敛的级数一定收敛，即
$$
\displaystyle\sum_{n=1}^{\infty}\left|u_{n}\right| \text { 收敛 } \rightarrow\displaystyle\sum_{n=1}^{\infty} u_{n} \text { 必收敛 }
$$
即加了绝对值收敛\leftarrow原级数（去掉绝对值）收敛

2.条件收敛的级数所有的正项（或负项）构成的级数\textcolor[rgb]{1,0,0}{一定发散}，即
$$
\sum_{n=1}^{\infty} u_{n} \text { 条件收敛 } \rightarrow \sum_{n=1}^{\infty} \frac{u_{n}+\left|u_{n}\right|}{2} \text { 和 } \sum_{n=1} \frac{u_{n}-\left|u_{n}\right|}{2} \text { 发散 }
$$
\end{theorem}
\subsection{级数收敛性的$\pm \times$（重点）}
注意到这里的乘法指的是$\displaystyle\sum_{n=1}^{\infty} u_{n} v_{n}$

1.
$$
\text { 收敛 }\pm\text{收敛}=
$$

2.
$$
\text { 收敛 }\times\text{收敛}=
$$

\subsection{绝对收敛与条件收件级数的$\pm \times$（重点）}
\begin{note}
注意到“收敛数列必定有界”
\end{note}

1.
$$
\text{绝对}\pm\text{绝对}
$$

2.
$$
\text{绝对}\pm\text{条件}
$$

3.
$$
\text{条件}\pm\text{条件}
$$

4.
$$
\text{绝对}\times\text{绝对}
$$

5.
$$
\text{绝对}\times\text{条件}
$$

上述反例需要掌握

\subsection{选择题的秒杀技巧}
\begin{note}
\begin{itemize}
    \item 没见过的都是错的
    \item 注意条件的充分性和必要性
    \item 看见乘法，利用不等式$$a b \leq \frac{a^{2}+b^{2}}{2}$$注意除法也是乘法
    \item 先考虑其绝对收敛性（先加绝对值再说）
    \item $\displaystyle\sum_{n=1}^{\infty}\left(a_{n+1}-a_{n}\right)$ 的敛散性与 $\displaystyle\lim _{n \rightarrow \infty} a_{n}$ 的敛散性相同
\end{itemize}
\end{note}


\begin{example}
若正项级数 $\displaystyle\sum_{n=1}^{\infty} a_{n}$ 收敛, 则 $\displaystyle\sum_{n=1}^{\infty}(-1)^{n} \frac{\sqrt{a_{n}}}{n}(\quad)$

A. 发散

B. 条件收敛

C. 绝对收敛

D. 敛散性不确定
\end{example}
\begin{example}
设级数$\displaystyle\sum_{n=1}^{\infty} a_{n}$发散$(a_{n}>0)$，令$S_{n}=a_{1}+a_{2}+\cdots+a_{n}$，则$\displaystyle\sum_{n=1}^{\infty}\left(\frac{1}{S_{n}}-\right.\left.\frac{1}{S_{n+1}}\right)( \quad )$

A.发散

B.收敛于$-\frac{1}{a_{1}}$

C.收敛于$0$

D.敛散性不确定
\end{example}
\begin{example}
\text { 级数 } \displaystyle\sum_{n=1}^{\infty}(-1)^{n}\left(1-\cos \frac{a}{n}\right)(a>0)( \quad )

A. 发散

B. 条件收敛

C. 绝对收敛

D. 敛散性与$a$有关
\end{example}

\begin{example}
级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛 $\left(u_{n}>0\right)$, 则下列结论正确的是 $(\quad)$ 

A.$\displaystyle\lim _{n \rightarrow \infty} \frac{u_{n+1}}{u_{n}}=\rho<1$

B.$\displaystyle\lim _{n \rightarrow \infty} \sqrt[n]{u_{n}}=\rho<1$

C.$\displaystyle\sum_{n=1}^{\infty}\left(u_{n}+u_{n+1}\right)$一定收敛

D.$\displaystyle\sum_{n=1}^{\infty} \sqrt{u_{n}}$收敛
\end{example}

\begin{example}
设$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛，则下列正确的是$(\quad)$

A.$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$一定收敛

B.$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$一定发散

C.$\displaystyle\sum_{n=1}^{\infty} u_{n}$绝对收敛

D.$\displaystyle\sum_{n=1}^{\infty} u_{n}$是正项级数，则$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$一定收敛
\end{example}

\begin{example}
设常数$k>0$则级数$\displaystyle\sum_{n=1}^{\infty}(-1)^{n} \frac{k+n}{n^{2}}(\quad)$

A.发散

B.绝对收敛

C.条件收敛

D.敛散性与$k$有关

\end{example}

\begin{example}
设$u_{n}=(-1)^{n} \ln \left(1+\frac{1}{\sqrt{n}}\right)$，则$(\quad)$

A.$\displaystyle\sum_{n=1}^{\infty} u_{n}$与$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$都收敛

B.$\displaystyle\sum_{n=1}^{\infty} u_{n}$与$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$都发散

C.$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛，而$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$发散

D.$\displaystyle\sum_{n=1}^{\infty} u_{n}$发散，$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$收敛
\end{example}

\begin{example}
设$\displaystyle\sum_{n=1}^{\infty} u_{n}$收敛，则下列级数必收敛的是$(\quad)$

A.$\displaystyle\sum_{n=1}^{\infty}(-1)^{n} \frac{u_{n}}{n}$
\end{example}

B.$\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$

C.$\displaystyle\sum_{n=1}^{\infty}\left(u_{2 n-1}-u_{2 n}\right)$

D.$\displaystyle\sum_{n=1}^{\infty}\left(u_{n}+u_{n+1}\right)$

\begin{example}
下列说法正确的是$(\quad)$

A.若 $\displaystyle\lim _{n \rightarrow \infty} \frac{u_{n+1}}{u_{n}}<1$, 则 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 一定收敛

B若 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛, 则 $\displaystyle\sum_{n=1}^{\infty}(-1)^{n} u_{n}$ 一定收敛

C.若正项级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收收, 则 $\displaystyle\sum_{n=1}^{\infty} u_{n}^{2}$ 一定收敛

D.$\displaystyle\lim _{n \rightarrow \infty} \frac{u_{n}}{v_{n}}=1$ 且 $\displaystyle\sum_{n=1}^{\infty} u_{n}$ 收敛, 则 $\displaystyle\sum_{n=1}^{\infty} v_{n}$ 一定收敛
\end{example}

\newpage
\section{幂级数的收敛判别法和展开}
下设$\displaystyle\sum_{n=1}^{\infty} u_{n}(x)$的基本要求是$u_{n}(x)(n=1,2, \cdots)$有共同的定义域
\subsection{收敛点与收敛域的概念}
\begin{definition}
若 $x_{0} \in I$, 对应的常数项级数 $\displaystyle\sum_{n=1}^{\infty} u_{n}\left(x_{0}\right)$ 收敛, 则称 $x_{0}$ 是 $\displaystyle\sum_{n=1}^{\infty} u_{n}(x)$ 的收敛点

收敛点的集合$\rightarrow$收敛域

发散点的集合$\rightarrow$发散域

\end{definition}
\subsection{幂级数的定义}
首先要说明的是，幂级数是函数项级数的一种特殊形式
\begin{definition}{幂级数}
形如$\displaystyle\sum_{n=0}^{\infty} a_{n}\left(x-x_{0}\right)^{n}$级数称为$x-x_{0}$的幂级数，其中$a_{n}(n=0,1,2, \cdots)$为常数，称为幂级数的系数。当$x_{0}=0$时，$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$称为$x$的幂级数
\end{definition}
\subsection{函数项级数的重要理解}
函数项级数只是将数项级数$\displaystyle\sum_{n=1}^{\infty} u_{n}$中的$u_{n}$“函数化”为$u_{n}(x)$，本质上$u_{n}(x)$最终还是（关于$x$的）一个数，所以数项级数中的判别法仍然适用
\begin{example}
求下列函数项级数的收敛域

（1）
$$
\sum_{n=1}^{\infty} \frac{(-1)^{n-1}}{2 n-1}\left(\frac{1-x}{1+x}\right)^{n}
$$

（2）
$$
\sum_{n=1}^{\infty} \frac{1}{1+x^{n}}
$$

\end{example}


\begin{note}
在理解下列有关定理的时候，要特别注意：同反常积分讲的一样，\textcolor[rgb]{1,0,0}{通项的值越小，收敛的“概率”就越高}，注意到此处的“小”仅和$0$作比较（想想看为什么？）
\end{note}
\subsection{幂级数的收敛之阿贝尔定理}
\begin{theorem}
1.若$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$ 当 $x=x_{0}\left(x_{0} \neq 0\right)$时收敛，则当$|x|<\left|x_{0}\right|$时，$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$绝对收敛

2.若 $\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$ 当 $x=x_{0}$ 时发散, 则当 $|x|>\left|x_{0}\right|$ 时, $\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$ 发散
\end{theorem}
\begin{note}
注意到上述两条定义对于端点处是无法判断的，只能单独讨论。即使是单独讨论，通常出现的形式也是莱布尼茨交错级数，调和级数等简单的判定，请勿担心
\end{note}
由上述的阿贝尔定理，我们可以得到如下关于幂级数$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$收敛性的可能情况如下
\begin{itemize}
    \item 对任何$x \in(-\infty,+\infty)$均收敛
    \item 仅在$x=0$初收敛
    \item 存在一个正数$R$，当$|x|<R$时绝对收敛，$|x|>R$时发散，至于$x=\pm R$时的敛散性，需要单独讨论（具体如何讨论后面会讲）
\end{itemize}
\subsection{幂级数的收敛之收敛半径和收敛域的求法}
在上述定理中, 正数 $R$ 称为幂级数 $\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$ 的收敛半径, \textcolor[rgb]{1,0,0}{开区间}$(-R, R)$ 称为它的收敛区间, 再考察 $x=\pm R$ 的时候的敛散性, 就可以得出该级数收敛点的全体, 称为收敛域
\begin{note}
要注意收敛半径、收敛区间、收敛域三者的区别。其中收敛半径是一个\textcolor[rgb]{1,0,0}{非负实数，收敛区间是开区间}，收敛域是整个收敛点的集合（可能是开区间、闭区间、半开半闭区间）
\end{note}

\begin{theorem}[收敛半径的根值判别法]
$$
\text { 如果 } \lim _{n \rightarrow \infty}\left|\frac{a_{n+1}}{a_{n}}\right|=\rho \text {, 则 } R=\frac{1}{\rho}
$$
\end{theorem}
\begin{theorem}[收敛半径的比值判别法]
$$
\text { 如果 } \lim _{n \rightarrow \infty} \sqrt[n]{\left|a_{n}\right|}=\rho \text {, 则 } R=\frac{1}{\rho}
$$
\end{theorem}
\begin{note}
上述两个判别法仅仅是\textcolor[rgb]{1,0,0}{充分非必要}条件！还要注意到是加了绝对值的
\end{note}
\subsection{关于非标准形式$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$收敛半径的求法}
在求收敛半径的时候，若并非标准的$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$，而是诸如$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{2 n+1}$的形式，作如下处理：将整个$a_{n} x^{2 n+1}$看作一个整体进行根值判别或比值判别，注意到$$
\displaystyle\sum_{n=0}^{\infty} a_{n} x^{2 n+1} \text { 的敛散性和 } \displaystyle\sum_{n=0}^{\infty} a_{n} x^{2 n}\text{、} \displaystyle\sum_{n=1}^{\infty} a_{n} x^{2 n-1} \text { 的\textcolor[rgb]{1,0,0}{敛散性相同} }
$$
例如：对于级数$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{2 n+1}$，为了求其收敛半径，可以考虑极限（假设极限存在）
$$
\lim _{n \rightarrow \infty}\left|\frac{a_{n+1}x^{2n+3}}{a_{n}x^{2n+1}}\right|
$$
同理可以考虑比值判别法的形式（不再赘述）

\subsection{两个幂级数四则运算的收敛半径}
设幂级数$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$ 的收敛半径为 $R_{1}$, $\displaystyle\sum_{n=0}^{\infty} b_{n} x^{n}$ 的收敛半径为 $R_{2}$，令$R=\min \left\{R_{1}, R_{2}\right\}$

1.加法：$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}+\sum_{n=0}^{\infty} b_{n} x^{n}=\sum_{n=0}^{\infty}\left(a_{n}+b_{n}\right) x^{n}, x \in(-R, R)$

2.减法：$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}-\sum_{n=0}^{\infty} b_{n} x^{n}=\sum_{n=0}^{\infty}\left(a_{n}-b_{n}\right) x^{n}, x \in(-R, R)$

3.乘法：$\displaystyle\left(\sum_{n=0}^{\infty} a_{n} x^{n}\right) \cdot\left(\sum_{n=0}^{\infty} b_{n} x^{n}\right), x \in(-R, R)$

4.除法：$\frac{\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}}{\displaystyle\sum_{n=0}^{\infty} b_{n} x^{n}}, x \in(-R, R)$

\begin{note}
上述是无条件成立的，但是如果考虑$$
\displaystyle\sum_{n=0}^{\infty}\left(a_{n} \pm b_{n}\right) x^{n}
$$
的收敛半径时，需要考虑$R_{1}=R_{1}$的情况
\end{note}
\subsection{幂级数的分析性质（连续、求导、积分）}
设幂级数$\displaystyle\sum_{n=0}^{\infty} a_{n} x^{n}$的收敛半径为$R$，和函数为$S(x)$，则
\begin{theorem}
1.连续性：$S(x)$在收敛域上连续

2.可导性（也称逐项可导性）$S(x)$在\textcolor[rgb]{1,0,0}{收敛区间}$(-R, R)$内可导，且可逐项求导，即
$$
S^{\prime}(x)=\left(\sum_{n=0}^{\infty} a_{n} x^{n}\right)^{\prime}=\sum_{n=0}^{\infty}\left(a_{n} x^{n}\right)^{\prime}=\sum_{n=0}^{\infty} n a_{n} x^{n-1}
$$

3.可积性（也称逐项可积性）$S(x)$在\textcolor[rgb]{1,0,0}{收敛区间}$(-R, R)$内可积，且可逐项积分，即
$$
\int_{0}^{x} f(x) \mathrm{d} x=\int_{0}^{x} \sum_{n=0}^{\infty} a_{n} x^{n} \mathrm{~d} x=\sum_{n=0}^{\infty} \int_{0}^{x} a_{n} x^{n} \mathrm{~d} x=\sum_{n=0}^{\infty} \frac{1}{n+1} a_{n} x^{n+1}
$$
\end{theorem}
\begin{note}
特别注意：在求导或积分后的幂级数与原幂级数有相同的收敛半径，但是\textcolor[rgb]{1,0,0}{不一定有相同的收敛域},仅仅针对区间的边界点
\end{note}
\subsection{函数的幂级数展开}
\begin{definition}
设函数在区间$\left(x_{0}-R, x_{0}+R\right)$上有定义，若
$$
f(x)=\sum_{n=0}^{\infty} a_{n}\left(x-x_{0}\right)^{n}
$$对任意的$\left(x_{0}-R, x_{0}+R\right)$都成立，称函数$f(x)$在$x \in\left(x_{0}-R, x_{0}+R\right)$上能展开为$x-x_{0}$的幂级数，进一步，展开后在区间$x \in\left(x_{0}-R, x_{0}+R\right)$\textcolor[rgb]{1,0,0}{任意阶可导}
\end{definition}
\begin{theorem}[幂级数展开的唯一性]
如果函数$f(x)$ 在区间 $\left(x_{0}-R, x_{0}+R\right)$上能展开为$x-x_{0}$的幂级数
$$
f(x)=\sum_{n=0}^{\infty} a_{n}\left(x-x_{0}\right)^{n}
$$
则$f(x)$ 在区间 $\left(x_{0}-R, x_{0}+R\right)$ 上任意阶可导, 且其展开式是唯一的, 其中
$$
a_{n}=\frac{f^{(n)}\left(x_{0}\right)}{n !}(n=0,1,2, \cdots)
$$
\end{theorem}
\begin{note}
唯一性定理保证了我们无论使用何种展开方式（直接展开或间接展开），最后的幂级数的结果是一样的
\end{note}
\begin{definition}
若函数$f(x)$ 在 $x=x_{0}$ 处任意阶可导, 则称幂级数
$$
\sum_{n=0}^{\infty} \frac{f^{(n)}\left(x_{0}\right)}{n !}\left(x-x_{0}\right)^{n}
$$
为$f(x)$ 在 $x=x_{0}$ 处的泰勒级数

特别的，$x_{0}=0$ 处的泰勒级数 $\displaystyle\sum_{n=0}^{\infty} \frac{f^{(n)}(0)}{n !} x^{n}$ 称为函数 $f(x)$ 的麦克劳林级数
\end{definition}
\begin{theorem}
设 $f(x)$ 在 $x=x_{0}$ 处任意阶可导, 则 $\displaystyle\sum_{n=0}^{\infty} \frac{f^{(n)}\left(x_{0}\right)}{n !}\left(x-x_{0}\right)^{n}$在$\left(x_{0}-R, x_{0}+R\right)$上收敛于$\Leftrightarrow \displaystyle\lim _{n \rightarrow \infty} R_{n}(x)=0$，其中$R_{n}(x)=\frac{f^{(n+1)}(\xi)}{(n+1) !}\left(x-x_{0}\right)^{n+1}$ 为 $f(x)$ 在 $x_{0}$处的泰勒公式
$$
f(x)=\sum_{k=0}^{n} \frac{f^{(k)}\left(x_{0}\right)}{k !}\left(x-x_{0}\right)^{k}+R_{n}(x)
$$中的余项$R_{n}(x)$
\end{theorem}
\subsection{常见函数的泰勒级数展开}
1.$$
\frac{1}{1-x}=1+x+x^{2}+\cdots+x^{n}+\cdots=\sum_{n=0}^{\infty} x^{n}(-1<x<1)
$$

2.
$$
\frac{1}{1+x}=1-x+x^{2}-\cdots+(-1)^{n} x^{n}+\cdots=\sum^{\infty}(-1)^{n} x^{n}(-1<x<1)
$$

3.
$$
e^{x}=1+x+\frac{x^{2}}{2 !}+\cdots+\frac{x^{n}}{n !}+\cdots=\sum_{n=0}^{\infty} \frac{x^{n}}{n !}
$$

4.
$$
\sin x=x-\frac{x^{3}}{3 !}+\cdots+\frac{(-1)^{n} x^{2 n+1}}{(2 n+1) !}+\cdots=\sum_{n=0}^{\infty} \frac{(-1)^{n} x^{2 n+1}}{(2 n+1) !}(-\infty<x<+\infty)
$$

5.
$$
\cos x=1-\frac{x^{2}}{2 !}+\cdots+\frac{(-1)^{n} x^{2 n}}{(2 n) !}+\cdots=\sum_{n=0}^{\infty} \frac{(-1)^{n} x^{2 n}}{(2 n) !}(-\infty<x<+\infty)
$$

6.
$$
\ln (1+x)=x-\frac{x^{2}}{2}+\cdots+\frac{(-1)^{n-1} x^{n}}{n}+\cdots=\sum_{n=1}^{\infty} \frac{(-1)^{n-1} x^{n}}{n}(-1<x \leqslant 1)
$$

7.
$$
(1+x)^{\alpha}=1+\alpha x+\frac{\alpha(\alpha-1)}{2 !} x^{2}+\cdots+\frac{\alpha(\alpha-1) \cdots(\alpha-n+1)}{n !} x^{n}+\cdots
$$
$$
=\sum_{n=0}^{\infty} \frac{\alpha(\alpha-1) \cdots(\alpha-n+1)}{n !} x^{n}(-1<x<1)
$$
\begin{note}
幂级数的展开方法：

1.直接法（基本不用）

2.间接展开法（常用）
\end{note}
\subsection{典型例题——求收敛域}

\begin{example}
求下列幂级数的收敛域

1.$\displaystyle\sum_{n=1}^{\infty}(-1)^{n-1} \frac{3^{n} x^{n}}{\sqrt{n}}$

2.$\displaystyle\sum_{n=1}^{\infty}(-1)^{n-1} \frac{x^{n}}{n^{n}}$

3.$\displaystyle\sum_{n=1}^{\infty}(-1)^{n-1} \frac{3^{n} x^{2 n+1}}{\sqrt{n}}$

4.$\displaystyle\sum_{n=1}^{\infty}\left(1+\frac{1}{n}\right)^{n^{2}} x^{2 n}$

\end{example}
\begin{example}
设$\displaystyle\sum_{n=1}^{\infty} \frac{(x-a)^{n}}{n}$ 在 $x=-2$ 处条件收敛, 则 $\sum_{n=1}^{\infty} n^{2}(x-a)^{n}$ 在 $x=\ln \frac{1}{2}$处( \quad )

A.绝对收敛

B.条件收敛

C.必发散

D.敛散性由$a$决定
\end{example}
\textcolor[rgb]{1,0,0}{重要技巧：}将括号看做一个整体
\begin{example}
设幂级数$\displaystyle\sum_{n=1}^{\infty} a_{n}(x-1)^{n}$ 在 $x=0$收敛，在$x=2$发散，则该幂级数的收敛域为\underline{\quad\quad\quad\quad}
\end{example}
\subsection{典型例题——求幂级数展开}
\begin{note}
核心技巧：

1.有限项与敛散性无关，强行凑成已知函数的幂级数展开

2.看见复杂的形式（非标准形式）可以考虑“先积分再求导”或者“先求导再积分”

3.注意基本公式的应用（如立方和、立方差、$1-x^{n}$等）
\end{note}
\begin{example}
$$f(x)=\frac{x}{9+x^{2}}$$
\end{example}

\begin{example}
$$f(x)=x \arctan x-\ln \sqrt{1+x^{2}}$$
\end{example}

\begin{example}
$$f(x)=\frac{1}{4} \ln \frac{1+x}{1-x}+\frac{1}{2} \arctan x-x$$
\end{example}

\begin{example}
$$f(x)=\ln \left(1+x+x^{2}+x^{3}+x^{4}\right)$$
\end{example}
\textcolor[rgb]{1,0,0}{在指定点展开}

\begin{note}
这里采用和不定积分一样的做法：看不懂就令
\end{note}

\begin{example}
$$
f(x)=\ln x \text {, 在 } x=1 \text { 处 }
$$
\end{example}

\begin{example}
$$
f(x)=\sin x, \text { 在 } x=\frac{\pi}{4} \text { 处 }
$$
\end{example}
\newpage
\section{幂级数的求和（送分绝活）}
\subsection{先看出答案和哪一个函数有关的方法（核心技巧）}
首先来回忆一下上节内容：常见的幂级数展开

1.$$
\frac{1}{1-x}=1+x+x^{2}+\cdots+x^{n}+\cdots=\sum_{n=0}^{\infty} x^{n}(-1<x<1)
$$

2.
$$
\frac{1}{1+x}=1-x+x^{2}-\cdots+(-1)^{n} x^{n}+\cdots=\sum^{\infty}(-1)^{n} x^{n}(-1<x<1)
$$

3.
$$
e^{x}=1+x+\frac{x^{2}}{2 !}+\cdots+\frac{x^{n}}{n !}+\cdots=\sum_{n=0}^{\infty} \frac{x^{n}}{n !}
$$

4.
$$
\sin x=x-\frac{x^{3}}{3 !}+\cdots+\frac{(-1)^{n} x^{2 n+1}}{(2 n+1) !}+\cdots=\sum_{n=0}^{\infty} \frac{(-1)^{n} x^{2 n+1}}{(2 n+1) !}(-\infty<x<+\infty)
$$

5.
$$
\cos x=1-\frac{x^{2}}{2 !}+\cdots+\frac{(-1)^{n} x^{2 n}}{(2 n) !}+\cdots=\sum_{n=0}^{\infty} \frac{(-1)^{n} x^{2 n}}{(2 n) !}(-\infty<x<+\infty)
$$

6.
$$
\ln (1+x)=x-\frac{x^{2}}{2}+\cdots+\frac{(-1)^{n-1} x^{n}}{n}+\cdots=\sum_{n=1}^{\infty} \frac{(-1)^{n-1} x^{n}}{n}(-1<x \leqslant 1)
$$

7.
$$
(1+x)^{\alpha}=1+\alpha x+\frac{\alpha(\alpha-1)}{2 !} x^{2}+\cdots+\frac{\alpha(\alpha-1) \cdots(\alpha-n+1)}{n !} x^{n}+\cdots
$$
$$
=\sum_{n=0}^{\infty} \frac{\alpha(\alpha-1) \cdots(\alpha-n+1)}{n !} x^{n}(-1<x<1)
$$
\begin{note}
记忆方法：
\newline
\newline
\end{note}
\begin{example}
求幂级数$\displaystyle\sum_{n=0}^{\infty} \frac{(-1)^{n}(n+1)}{(2 n+3) !} x^{2 n}$的和函数$S(x)$
\end{example}
\begin{solution}
$$
S(x)=\left\{\begin{array}{cl}
(\sin x-x \cos x) /\left(2 x^{3}\right), & x \neq 0 \\
1 / 6, & x=0
\end{array}\right.
$$
\end{solution}
\begin{example}[（2002真题）]
\par
（1）验证函数
$$
y(x)=1+\frac{x^{3}}{3 !}+\frac{x^{6}}{6 !}+\frac{x^{9}}{9 !}+\cdots+\frac{x^{3 n}}{(3 n) !}+\cdots(-\infty<x<+\infty)
$$
满足微分方程$y^{\prime \prime}+y^{\prime}+y=\mathrm{e}^{x}$

（2）利用（1）的结果求幂级数$\displaystyle\sum_{n=0}^{\infty} \frac{x^{3 n}}{(3 n) !}$的和函数
\end{example}
\newpage
\begin{example}[（2018选择题）]
$$
\sum_{n=0}^{\infty}(-1)^{n} \frac{2 n+3}{(2 n+1) !}=\underline{\quad\quad\quad\quad}
$$
\end{example}
\begin{example}[（2019真题）]级数$\displaystyle\sum_{n=0}^{\infty} \frac{(-1)^{n}}{(2 n) !} x^{n}$ 在 $(0,+\infty)$内的和函数$S(x)=\underline{\quad\quad\quad\quad}$
\end{example}
